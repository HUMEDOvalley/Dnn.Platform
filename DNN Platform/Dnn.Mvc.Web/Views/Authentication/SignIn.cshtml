@using Dnn.Mvc.Web.Models

@model AuthenticationViewModel

@{
    Layout = "~/Views/Shared/_ModalLayout.cshtml";
    ViewBag.Title = "Sign In";
}

<div>
    <div class="form-horizontal" role="form">
        @*@Html.AntiForgeryToken()*@
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    @Html.CheckBoxFor(m => m.RememberMe)
                    @Html.LabelFor(m => m.RememberMe)
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer" id="signInActions">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <button id="signInButton" class="btn btn-primary">Sign In</button>
</div>

<script type="text/javascript">
    $(document).ready(function() {
        $("#signInActions button.btn-primary").click(function () {
            $.ajax({
                url: "@Url.Action("SignIn", "Authentication")",
                datatype: "html",
                contenttyep: "application/html; charset=utf-8",
                type: "POST",
                data: {
                    "username": $("#UserName").val(),
                    "password": $("#Password").val(),
                    "returnUrl": "@ViewBag.ReturnUrl"
                },
                success: function(result) {
                    if (result.Success) {
                        $(".modal").modal("hide");
                        window.location = "@Url.Action("Index", "Page")";
                    } else {
                        var $alert = $(".modal .alert");
                        $alert.addClass("alert-danger");
                        $alert.fadeIn("slow");

                    }
                },
               error: function(xhr, status) {

                }
            });
        });
    });
</script>